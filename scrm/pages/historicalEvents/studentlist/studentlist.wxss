/* pages/historicalEvents/studentlist/studentlist.wxss */
page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}
.timeIndex{
  height: 100%;
  width: 100%;
  padding: 0;
  margin: 0;
  position: absolute;
  top: 0;
  left: 0;
}
.top1{
  position: absolute;
  top: 0;
  width: 100%;
  height: 15%;
  background: #1358b5;
}
.top{
  position: absolute;
  top: 0;
  width: 100%;
  height: 25%;
  background: #1358b5;
  border-radius: 100% / 30%;
  display: flex;
}
.top_view{
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top_center{
  width: 80%;
  height: 80%;
}
.top_center text{
  display: block;
  width: 100%;
  text-align: center;
  color: white;
}
.top_center_title{
  opacity: 0.8;
  font-size: 15px;
}
.top_center_status{
  font-weight: bold;
  margin: 10px 0;
}
.top_center_time{
  opacity: 0.8;
  font-size: 13px;
}
.center{
  height: 10%;
  width: 100%;
  position: absolute;
  top: 25%;
  display: flex;
  align-items: center;
}
.center_view{
  height: 46px;
  width: calc(100% / 3);
}
.center_center{
  height: 46px;
  width: calc(100% / 3);
  border-left: 1px solid #eeeeee;
  border-right: 1px solid #eeeeee;
}
.center_text1{
  display: block;
  width: 100%;
  text-align: center;
  font-weight: bold;
}
.center_text2{
  display: block;
  width: 100%;
  text-align: center;
  color: #565656;
  font-size: 14px;
}
.bottom{
  position: absolute;
  top: 35%;
  height: 65%;
  width: 100%;
}
.attence_top{
    position: relative;
    width: 100%;
    height: 43px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #cccccc;
  }
  .attence_status{
    width: 50%;
    font-size: 16px;
    text-align: center;
  }
  .attence_medium{
    width: 100%;
    height: 43px;
    font-size: 15px;
    position: relative;
    top: 5px;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    justify-content: center;
    font-weight: 600;
    color: #333333;
    border-bottom: 5px solid #f2f2f2;
    border-top: 5px solid #f2f2f2;
  }
  .attence_medium text{
    width: 70px;
    border-left: 3px solid #006fc8;
    margin: 0 0 0 4%;
  }
  .attence_medium_left{
    float: left;
  }
  .attence_medium_right{
    float: right;
  }
  .attence_scroll{
    width: 92%;
    height: calc(100% - 58px);
    margin: 0 auto;
    font-size: 14px;
    position: relative;
    top: 5px;
  }
  .attence_scroll_view{
    border-bottom: 1px solid #cccccc;
    height: 21px;
    padding: 7px 0;
  }
  .attence_scroll_left{
    margin: 0 0 0 2%;
    color: #555555;
  }
  .attence_scroll_right{
    float: right;
    margin-right: 2%;
  }