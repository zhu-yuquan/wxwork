page{
  width: 100%;
  height: 100%;
  padding:0%;
  margin: 0%;
  background-color: #f2f2f2;
}
.header{
  position: relative;
  width: 90%;
  height: 6%;
  line-height: 100%;
  font-size: 18px;
  padding-left: 5%;
  padding-top: 8%;
  color: #333333;
}
.detail{
  position: relative;
  height: 10%;
  width: 90%;
  left: 5%;
  margin-top: 3%;
  background: white;
  border-radius: 15px;
}
.detail_img{
  float: left;
  width: 14%;
  height: 80%;
  text-align: center;
}
.detail_text{
  float: left;
  height: 66%;
  margin-top: 6%;
  font-size: 18px;
  color: #787878;
}
.detail_input{
  float: left;
  width: 58%;
  height: 100%;
  
}
image{
  margin-top: 36%;
  height: 50%;
  width: 50%;
}
.input_text{
  position: relative;
  width: 100%;
  height: 100%;
  font-size: 18px;
}
.btn{
  background-color: #006fcb;
  height: 8%;
  width: 86%;
  margin: 10% 7% 0 7%;
  text-align: center;
  padding-top:6%;
  border-radius: 30px;
  color: white;
}

