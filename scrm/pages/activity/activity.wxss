/* pages/activity/activity.wxss */
page{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color: #f2f2f2;
}
.content{
  width: 100%;
  height: auto;
  background-color: #ffffff;
}
.header{
  margin-left: 2%;
  width: 98%;
  height:5%;
  font-size: 26px;
  border-left: 5px solid blue;
  padding-left: 4%;
  /* padding-top: 2%; */
}
.header_content{
  margin-left: 5%;
  margin-top: 3%;
  width: 90%;
  padding-bottom: 3%;
}
.content1{
  width: 100%;
  height: auto;
  background-color: #ffffff;
  margin: 2% 0%;
}
.activity_photo{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.camera{
  position: relative;
  margin-left: 5%;
  margin-top: 5%;
  width: 90%;
  height: 45%;
}
.photo{
  float: left;
  width: 48%;
  height: 48%;
  background-color: blue;
  border-radius: 15px;
  margin: 1%;
}
.qcode{
  width: 44%;
  height: 24%;
  background-color: blue;
  margin: 3% auto;
}
.point{
  width: 100%;
  color: #1358B5;
  font-size: 14px;
  text-align: center;
}
.enlist{
  width: 80%;
  height: 7%; 
  margin: 3% auto 5%;
  background-color: #006fc8;
  border-radius: 30px;
  text-align: center;
  padding-top: 4%;
  color: #ffffff;
}