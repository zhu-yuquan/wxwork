/*pages/admin/attence/attence.wxss  */
.attence_mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: black;
  opacity: 0.7;
  z-index: 90;
}
.attence{
		position:absolute;
		top:10%;
		left: 10%;
		width: 80%;
		height: 80%;
		background-color: white;
		border-radius: 15px;
		z-index: 100;
	}
  .attence_off{
		position:absolute;
		right:-15px;
		top: -15px;
		width:30px;
		height:30px;
	}
  .attence_top{
    position: relative;
    width: 100%;
    height: 43px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #cccccc;
  }
  .attence_status{
    width: 50%;
    font-size: 16px;
    text-align: center;
  }
  .attence_medium{
    width: 92%;
    height: 21px;
    font-size: 15px;
    margin: 0 auto;
    position: relative;
    top: 5px;
  }
  .attence_medium_left{
    float: left;
  }
  .attence_medium_right{
    float: right;
  }
  .attence_scroll{
    width: 92%;
    height: 82%;
    margin: 0 auto;
    font-size: 14px;
    position: relative;
    top: 5px;
  }
  .attence_scroll_view{
    border-bottom: 1px solid #cccccc;
    height: 21px;
    padding: 5px 0;
  }
  .attence_scroll_left{
    float: left;
    color: gray;
  }
  .attence_scroll_right{
    float: right;
  }