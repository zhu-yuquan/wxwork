/*遮罩  */
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 43px;
  left: 0;
  background: black;
  opacity: 0.7;
  z-index: 10;
}

/*筛选  */
.mask_screening{
  position: absolute;
  top: 43px;
  left: 0;
  width: 100%;
  height: 48%;
  z-index: 999;
  background-color: white;
}
.screening_title_screen{
  padding:3% 0;
  color:#333333;
  padding-left:3%;
  width: 97%;
  height: 7%;
}
.screening_mask_top{
  height: 15%;
  display: flex;
  padding: 3% 0;
  border-bottom: 1px solid #ccc;
}
.screening_big_screen{
  width: 26.5%;
  height:100%;
  line-height:40px;
  margin: 0 3%;
  color:#565656;
  text-align: center;
  border-radius: 5px;
  border: 1px solid #cccccc;
}
.screening_button_big_screen{
  width: 26.5%;
  height:100%;
  line-height:40px;
  margin: 0 3%;
  color:#FFF;
